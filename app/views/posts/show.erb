<h2> Digital Nomad Life</h2> 

<h3 style="color:#f39233;"><%= @post.location %></h3>
    <img src="<%= @post.image_url %>" alt="<%= @post.location %>" height="200" width="200">
    <br><br>
    <strong>Created at: <%= @post.created_at %></strong>
    <p><%= @post.journal %></p>

<% if authorized_to_edit?(@post) %>
  
  <a href="/posts/<%= @post.id %>/edit">Edit Post</a>

  <form  action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" name="action" value="Delete This Post">
  </form>

<% end %>
